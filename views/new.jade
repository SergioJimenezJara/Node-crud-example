extends layout

block content
      .container
        form(method='POST' action='/new')
          .form-group
            label(for='title') Titulo
            input#title.form-control(type='text' placeholder='titulo' name='title')
          .form-group
            label(for='description') Descripcion
            input#description.form-control(type='text' placeholder='descripcion' name='description')  
          .form-group
            label(for='status') Estado
            select#status.form-control(name='status')
              option todo
              option doing
              option done
              option review
          button.btn.btn-primary(type='submit') Añadir  

        h1(style="margin-top: 50px") #{mensaje} 
        
      hr
      .row
      .container
          footer.footer
            .container
              p.text-muted Imagina Formación | 2016