block content
      .container
        form(method='GET' action='/tareas')
          .form-group
            label(for='id') Seleccione una id
              input#id.form-control(type='text' placeholder='id' name='id' )
          button.btn.btn-primary(type='submit') Buscar  

        form(method='POST' action='/tareas/edit' style='margin-top: 20px')
          form-group
              label(for='id') Seleccione una id
              input#id.form-control(type='text' placeholder='id' name='id' )
          .form-group
            label(for='title') Titulo
            input#title.form-control(type='text' placeholder='titulo' name='title')
          .form-group
            label(for='description') Descripcion
            input#description.form-control(type='text' placeholder='descripcion' name='description')  
          .form-group
            label(for='status') Estado
            select#status.form-control(name='status')
              option todo
              option doing
              option done
              option review
          button.btn.btn-primary(type='submit') Editar  

        h1(style="margin-top: 50px") #{estado} 
        
