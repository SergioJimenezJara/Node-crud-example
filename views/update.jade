extends layout

block content
      .container
        form(method='GET' action='/search/id/')
          .form-group
            label(for='id') Seleccione una id
              input#id.form-control(type='text' placeholder='id' name='id' )
          button.btn.btn-primary(type='submit') Buscar


        if tarea
          form(method='POST' action='/update')
            input#title.form-control(type='hidden' placeholder='id' name='id' value=tarea.id)  
            .form-group
              label(for='title') Nombre de la tarea
                input#title.form-control(type='text' placeholder='title' name='title' value=tarea.title)  
            .form-group
              label(for='description') Descripcion de la tarea
                input#description.form-control(type='text' placeholder='description' name='description' value=tarea.description)  
            .form-group
              label(for='status') Estado de la tarea
                input#status.form-control(type='text' placeholder='status' name='status' value=tarea.status)  
            button.btn.btn-primary(type='submit') Actualizar

        if mensaje
          h1(style="margin-top: 50px") #{mensaje}


        
